{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Dev-Server",
			"type": "shell",
			"command": "php artisan serve",
			"group": "build",
			"presentation": {
				"revealProblems": "onProblem",
				"panel": "dedicated"
			},
			"icon": {
				"id": "server"
			}
		},
		{
			"label": "Dev-JS-Server",
			"type": "shell",
			"command": "npm run dev",
			"group": "build",
			"presentation": {
				"revealProblems": "onProblem",
				"panel": "dedicated"
			},
			"icon": {
				"id": "flame"
			}
		},
		{
			"label": "Export-IDE-Helper",
			"type": "shell",
			"command": "php artisan ide-helper:generate && php artisan ide-helper:models --nowrite && php artisan typescript:transform && php artisan ziggy:generate --types",
			"group": "build",
			"presentation": {
				"revealProblems": "onProblem",
				"panel": "dedicated"
			},
			"icon": {
				"id": "rocket"
			}
		},
        {
            "label": "Start All Dev Servers",
            "dependsOn": ["Dev-Server", "Dev-JS-Server", "Export-IDE-Helper"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Lint PHP",
            "type": "shell",
            "command": "vendor/bin/phpstan analyze",
        },
        {
            "label": "PHP Tests",
            "type": "shell",
            "command": "php artisan test",
        },
        {
            "label": "Create test coverage report",
            "type": "shell",
            "command": "XDEBUG_MODE=coverage php artisan test --coverage-html coverage-report"
        },
        {
            "label": "Lint JS",
            "type": "shell",
            "command": "npx vue-tsc && npm run lint",
        },
		{
			"label": "Format JS",
			"type": "shell",
			"command": "npm run format",
		},
		{
			"label": "Format PHP",
			"type": "shell",
			"command": "vendor/bin/pint"
		},
		{
			"label": "Refactor PHP",
			"type": "shell",
			"command": "vendor/bin/rector",
		},
		{
			"label": "Run all code quality tools",
			"dependsOn": [ "Refactor PHP", "Lint PHP", "Format PHP", "Lint JS", "Format JS"],
			"icon": {
				"id": "check"
			},
			"group": "build",
			"presentation": {
				"revealProblems": "onProblem",
				"panel": "dedicated"
			},
		}
	]
}

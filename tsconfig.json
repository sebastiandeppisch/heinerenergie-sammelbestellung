{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "preserve",
		"isolatedModules": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": "./resources/js",
		"paths": {
			"@/*": ["./*"],
		},
		"types": ["vite/client"]
	},
	"include": ["resources/js/**/*.ts", "resources/js/**/*.d.ts", "resources/js/**/*.tsx", "resources/js/**/*.vue"],
}
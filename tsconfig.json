{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"sourceMap": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"jsx": "preserve"
	},
	"baseUrl": "./resources/js",
	"include": ["./resources/js/**/*", "./resources/js/tests/**/*"],
    "exclude": ["node_modules"]
}
{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"sourceMap": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"noEmit": true,
		"types": ["vite/client"], 
		"strict": true,
		"paths": {
            "@/*": ["./resources/js"]
        }
	},
	"include": ["resources/js/**/*.ts", "resources/js/**/*.d.ts", "resources/js/**/*.vue"]
}